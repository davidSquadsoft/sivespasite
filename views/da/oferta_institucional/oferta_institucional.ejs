<%- include('../includes/header') -%>
    <section class="content">
        <div class="titulo_pagina row align-items-center">
            <div class="col-lg-2">
                <div class="btn_close d-md-none d-lg-block">
                    <button type="button" class="close_sidebar">
                        <i class="bi bi-arrows-fullscreen maximize" id="texto_button_sidebar">&nbsp;Maximizar</i>
                    </button>
                </div>
            </div>
            <div class="col-lg-4">
                <h4>
                    <%=tittle%>
                </h4>
            </div>
            <div class="col-lg-6 d-md-none d-lg-block">
                <div class="bell_notificaciones"><a href="/da/notificaciones"><i
                            class="bi bi-bell-fill"></i></a></div>
                <div class="dropdown">
                    <button class="btn btn-secondary  dropdown-toggle" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        <% if(user) {%>
                            <p class="nombre_entidad_activa">
                            <%= user.NOMBRE %> <%= user.APELLIDO %>
                            </p><% }%>
                        <br>
                        <p class="cambiar"><%= user.ENTIDAD %></p>
           
              
                </div>
            </div>
        </div>
        <div class="section_form fluid-container">
            <div class="container_reporte_form ">
                <div class="row buscar">
                    <div class="row section_btn_dashboard_individual">
                    <% if(user) { if (user.TIP_USER == 1 || user.TIP_USER == 2) {%>
                        <div class="col-lg-3 col-xs-12">
                            <a href="/da/crearofertainstitucional" data-bs-toggle="modal " data-bs-target="#modal_crear_entidad ">
                                <div class="card card_dashboard_individual ">
                                    <div class="card-body ">
                                        <div class="row ">
                                            <div class="col-3 ">
                                                <svg id="Capa_1" data-name="Capa 1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 21.33 21.33"><defs><style>.cls-1{fill:#fff;}</style></defs><title>plan_de_accion</title><path class="cls-1" d="M19.28,4.49A8.16,8.16,0,0,0,19,3.65a2.61,2.61,0,0,0-2-1.51s-.05,0-.08,0h2.38Z"/><path class="cls-1" d="M18.78,1.2A11.94,11.94,0,0,0,17,1.37a5.52,5.52,0,0,0-1.55.42A7.07,7.07,0,0,0,14.06,3a27.82,27.82,0,0,0-2.37,3.05C10.75,7.44,9.91,8.77,9.21,10S8,12.37,7.31,13.68a6.78,6.78,0,0,0-1.4-1.35,3.2,3.2,0,0,0-1.75-.64,3.11,3.11,0,0,0-1.81.73,2.12,2.12,0,0,0-1,1.69,2.74,2.74,0,0,0,.89,1.67,21.47,21.47,0,0,1,2.09,2.63,11,11,0,0,0,.8,1.14,1.67,1.67,0,0,0,.68.44,4.07,4.07,0,0,0,1.31.14,4.05,4.05,0,0,0,1.8-.28,2.08,2.08,0,0,0,.81-.8c.17-.3.44-.92.83-1.87a45.52,45.52,0,0,1,3.88-7.44A29.72,29.72,0,0,1,19.1,3.83a5.26,5.26,0,0,0,.71-.75A1.32,1.32,0,0,0,20,2.39a1.14,1.14,0,0,0-.34-.84A1.21,1.21,0,0,0,18.78,1.2Z"/></svg>
                                            </div>
                                            <div class="col-9">
                                                <h5 class="card-title align-self-center ">Crear Nueva Oferta</h5>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div> 
                        <% }}%>
                        <div class="col col-xs-12">
                            <form action=" " class="form-group ">
                                <p class="textos_black ">Buscar oferta institucional por titulo, entidad o regi√≥n</p>
                                <div class="input-group mb-3 ">
                                    <input type="text " class="form-control " placeholder="Buscar " aria-label="Buscar " aria-describedby="button-addon2 ">
                                    <button class="btn btn-outline-secondary btn_search " type="button " id="button-addon2 "><i class="bi bi-search "></i></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- <div class="row" id="administrar_noticias">
                </div> -->
                <div class="row">
                    <h3>Mis ofertas institucionales</h3>
                    <% dataofertas.forEach((loferta)=>{%> 
                    <div class="col-lg-4 col-xs-12">
                        <div class="card card_news">
                       
                            <div class="card-body">
                                <h5 class="card-title"><%= loferta.titulo %> </h5>
                             
                                <p class="card-text"><%= loferta.contenido %> </p>
                                 
                                <button class="btn_green" type="button" onclick="location.href='/da/veroferta/<%= loferta.id %>'">Leer</button>
                                <% if (user.TIP_USER==1 || user.TIP_USER==2){ %> 
                                <button class="btn_green" type="button" onclick="location.href=`/da/editaroferta/<%= loferta.id %>`">Editar</button>
                                <button class="btn_red_wide" type="button" onclick="confirmar(<%= loferta.id %>)">Eliminar</button>
                                <% } %> 
                            </div>
                        </div>
                    </div>
                    <% }) %> 
                  
                </div>
            </div>
    </section>


    <script>
        function confirmar(id){
            Swal.fire({
  title: 'Desea eliminar la oferta institucional',
  text: "Este cambio no se puede revertir!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3c773c',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Si, eliminar'
}).then((result) => {
  if (result.isConfirmed) {
    
        window.location='/da/borraroferta/'+id;
      
   
    
  }
})
        }
    </script>
